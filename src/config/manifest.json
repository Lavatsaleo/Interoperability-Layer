{
  "server": {
    "app": {
      "slogan": "Interoperability Layer for the HIS projects"
    }
  },
  "connections": [
    {
      "port": 5000,
      "labels": ["web-ui", "IL"]
    },
    {
      "port": 3003,
      "labels": ["api", "IL"]
    },
    {
      "port": 3007,
      "labels": ["VL"]
    }
  ],
  "registrations": [
    {
      "plugin": {
        "register": "good",
        "options": {
          "ops": {
            "interval": "600000"
        },
          "reporters": {
            "console": [
              {
                "module": "good-squeeze",
                "name": "Squeeze",
                "args": [{
                  "log": "*",
                  "response": "*"
                }]
              },{
                "module": "good-console"
              }, "stdout" 
            ],
            "file": [
              {
                "module": "good-squeeze",
                "name": "Squeeze",
                "args": [{ "ops": "*", "log": "*", "response": "*", "request": "*", "error": "*" }]
              },
              {
                "module": "good-squeeze",
                "name": "SafeJson",
                "args": [ null, { "separator": ",\n" } ]
              },
              {
                "module": "rotating-file-stream",
                "args": [
                  "ops_log.json",
                  {
                    "size": "300K",
                    "path": "./logs"
                  }
                ]
              }
            ]
          }
        }
      }
    },
    { "plugin": "blipp" },
    { "plugin": "inert" },
    { "plugin": "vision" },
    { "plugin": "lout", "options": { "endpoint": "/api/docs" }},
    //routes
    { "plugin": "../routes/addressmapping.routes"},
    { "plugin": "../routes/entity.routes"},
    { "plugin": "../routes/logs.routes"},
    { "plugin": "../routes/messagetype.routes"},
    { "plugin": "../routes/stats.routes"},
    { "plugin": "../routes/subscriber.routes"},
    { "plugin": "../routes/web.routes"}
  ]
}