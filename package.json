{
  "name": "interoperability-layer-api",
  "version": "1.0.0",
  "description": "The backend API for the IL(Interoperability Layer) Manager",
  "main": "src/lib/index.js",
  "scripts": {
    "start": "nodemon src/lib/index.js --exec babel-node --presets es2015,stage-3 --ignore 'logs/*.json'",
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist/src src && npm run prep:dependencies",
    "prep:dependencies": "npm prune --production && cp -Rf node_modules dist/node_modules --verbose",
    "serve": "node dist/src/lib/index.js",
    "test": "lab -t 100 -S -c -v -T  ./node_modules/lab-babel -I __core-js_shared__ ./test/",
    "cover": "lab -S -T ./node_modules/lab-babel -I __core-js_shared__ -r html -o ./test/coverage.html ./test/"
  },
  "author": "Teddy Odhiambo",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.11.6",
    "cpx": "1.5.0",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-standard": "11.0.0",
    "eslint-plugin-import": "2.10.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "3.0.1",
    "lab": "^15.1.2",
    "mocha": "^3.0.1",
    "nodemon": "^1.10.0"
  },
  "dependencies": {
    "base-64": "0.1.0",
    "blipp": "^2.3.0",
    "boom": "^5.2.0",
    "bunyan": "1.8.12",
    "bunyan-format": "0.2.1",
    "dateformat": "3.0.3",
    "es6-promise": "4.2.4",
    "hapi": "^16.5.0",
    "inert": "^4.2.1",
    "isomorphic-fetch": "2.2.1",
    "jsontoxml": "^0.1.0",
    "lout": "^10.0.2",
    "ping": "^0.2.2",
    "sequelize": "^4.4.2",
    "tedious": "^2.1.5",
    "vision": "^4.1.1"
  },
  "babel": {
    "presets": [
      "stage-3",
      "es2015"
    ],
    "plugins": [
      "transform-runtime"
    ]
  }
}
